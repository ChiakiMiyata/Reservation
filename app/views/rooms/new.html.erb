<div class="rooms_new_container">
  <h2>施設の新規登録</h2>

  <%= form_with model: @room do |f| %>
    <div class="field">
      <%= f.label :room_name, "施設名" %><font color="red"> *</font><br />
      <%= f.text_field :room_name %>
    <div>

    <div class="field">
      <%= f.label :introduction, "施設詳細" %><font color="red"> *</font><br />
      <%= f.text_area :introduction %>
    </div>

    <div class="field">
      <%= f.label :fee, "料金" %><font color="red"> *</font><br />
      <%= f.text_field :fee %>
    </div>

    <div class="field">
      <%= f.label :address, "住所" %><font color="red"> *</font><br />
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :room_image ,"施設画像" %><br />
      <%= f.file_field :room_image, accept: "image/*" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class:"btn btn-primary" %>
      <%= link_to "キャンセル", :back, class:"btn btn-light" %>
  <% end %>
</div>