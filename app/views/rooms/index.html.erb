<div class="rooms_index_container">
  <h2>施設一覧</h2>

  <table width="100%" class="rooms_table">
    <thead>
      <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>料金</th>
        <th>作成日</th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <% if room.room_image.attached? %>
              <%= image_tag room.room_image.variant(resize:'100').processed %>
            <% else %>
              <%= image_tag 'room.png', :size => '100x70' %>
            <% end %>
          </td>
          <td>
            <%= link_to room_path(room) do %>
              <%= room.room_name %>
            <% end %>
          </td>
          <td><%= room.introduction %></td>
          <td><%= room.fee %></td>
          <td><%= room.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>