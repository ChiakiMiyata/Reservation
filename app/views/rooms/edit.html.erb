<h2>編集</h2>

<%= form_with model: @room do |f| %>
<table>
  <tr>
    <th><%= f.label :room_name, "施設名" %></th>
    <th><%= f.text_field :room_name %></th>
  </tr>

  <tr>
    <th><%= f.label :introduction, "施設詳細" %></th>
    <th><%= f.text_area :introduction %></th>
  </tr>

  <tr>
    <th><%= f.label :fee, "料金" %></th>
    <th><%= f.text_field :fee %></th>
  </tr>

  <tr>
    <th><%= f.label :address, "住所" %></th>
    <th><%= f.text_field :address %></th>
  </tr>

  <tr>
    <th><%= f.label :room_image ,"施設画像" %></th>
    <th><%= f.file_field :room_image, accept: "image/*" %></th>
  </tr>

</table>

  <%= f.submit "更新" %>

<% end %>