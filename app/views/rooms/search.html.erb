<%= "検索結果: #{@results}" %>
<table>
  <tr>
    <% @rooms.each do |room| %>
      <tr>
        <th>
          <% if room.room_image.attached? %>
            <%= image_tag room.room_image.variant(resize:'150').processed %>
          <% else %>
            <%= image_tag 'room.png' %>
          <% end %>
        </th>
        <th>
          <%= link_to room_path(room) do %>
            <%= room.room_name %>
          <% end %>
        </th>
        <th><%= room.introduction %></th>
        <th><%= room.fee %></th>
        <th><%= room.created_at.strftime("%Y/%m/%d") %></th>
      </tr>
    <% end %>
  </tr>
</table>
